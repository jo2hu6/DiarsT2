@model DiarsT2.Models.Pokemon

<h1>Registro pokemon</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <form action="/Pokemon/Register" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessage("Name")</span>
                </div>
                <div class="form-group">
                    <label>Tipo</label>
                    <select class="form-control" name="TypeId">
                        @foreach (var type in ViewBag.Tipos)
                        {
                                <option value="@type.Id">@type.Name</option>
                         }
                    </select>
                </div>
                <div class="form-group">
                    <label>Imagen</label>
                    <input type="file" name="image" value="" />
                    <span class="text-danger">@Html.ValidationMessage("Imagen")</span>
                </div>
                <button type="submit" class="btn btn-outline-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>